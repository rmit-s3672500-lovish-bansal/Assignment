<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Edit Course</h2>
    <%= form_for(@course) do |f|%>
      <%= render 'shared/course_error'%>
      <div class="form-group">
        <%= f.label :name, "Course Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :prerequisite, "Prerequisite" %>
        <%= f.text_field :prerequisite, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Description, "Description" %>
        <%= f.text_area :Description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :category, "Categories" %>
        <% Category.all.each do |category| %>
          <label class="checkbox-inline" >
            <%= check_box_tag "course[category_ids][]", category.id %>
            <pre><%= category.title %></pre>
          </label>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :locations, "Locations" %>
        <% Location.all.each do |location| %>
          <label class="checkbox-inline">
            <%= check_box_tag "course[location_ids][]", location.id %>
            <pre><%= location.venue %></pre>
          </label>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Course", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
